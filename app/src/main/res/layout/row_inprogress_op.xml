<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:selectableItemBackground"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp">

        <ImageView
            android:id="@+id/picture"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@drawable/listtextfields" />

        <TextView
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:text="Requirement Name: "
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingLeft="7dp"
            android:paddingTop="7dp"/>

        <TextView
            android:id="@+id/volName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:layout_below="@+id/Name"
            android:clickable="true"
            android:focusable="true"
            android:text="Volunteer: "
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingLeft="7dp"
            android:paddingTop="7dp"/>



        <TextView
            android:id="@+id/volEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:layout_below="@+id/volName"
            android:focusable="true"
            android:text="Volunteer's email: "
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingLeft="7dp"
            android:paddingTop="7dp"/>

        <TextView
            android:id="@+id/volPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:layout_below="@+id/volEmail"
            android:focusable="true"
            android:text="Volunteer's Phone Number: "
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingLeft="7dp"
            android:paddingTop="7dp"/>
        <TextView
            android:id="@+id/volRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:layout_below="@+id/volPhone"
            android:focusable="true"
            android:text="Volunteer's rating : "
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingLeft="7dp"
            android:paddingTop="7dp"/>

        <TextView
            android:id="@+id/State"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/picture"
            android:padding="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="State: " />

        <!--<Button
            android:id="@+id/btnrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/picture"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Rate" />-->

    </RelativeLayout>
</androidx.cardview.widget.CardView>